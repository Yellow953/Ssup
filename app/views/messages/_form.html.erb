<%= form_with(model: [@selected_room, @message], remote: true, data: {controller: "reset-form", action: "turbo:submit-end->reset-form#reset"}, class:"flex mx-2") do |f| %>
    <%= f.text_field :body, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    <%= f.submit "Send", class:"mx-2 bg-green-500 hover:bg-green-700 text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline", data: { disable_with: false }  %>
<% end %>
