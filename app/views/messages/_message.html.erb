<div class="flex mb-2 cont-<%= message.user.id %>">
    <div class="rounded py-2 px-3 bg-white m-2 message-box msg-<%= message.user.id %>">
        <% unless message.room.is_private %>
            <div class="flex">
                <%= image_tag(message.user.chat_avatar, class:"rounded-full border border-gray-100 shadow-sm w-5 h-5 ") %>
                <p class="text-sm text-green-500 user mx-2">
                    <%= message.user.email %>
                </p>
            </div>
        <% end %>
        <p class="text-sm mt-1">
            <%= message.body %>
        </p>
        <p class="text-right text-xs text-grey-dark mt-1">
            <small><%= time_ago_in_words(message.created_at) %> ago</small>
        </p>
    </div>
</div>