<%= form_with url: search_rooms_path, method: :post, id:"room_search_form", data: { controller: 'debounce' } do |f| %>
    <%= f.search_field :name_search,
    value: params[:name_search],
    placeholder: "Search for rooms...",
    data: { action: 'input->debounce#search' },
    class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
<% end %>

<div id="search_results">
    <%= render "rooms/search_results", rooms: @rooms  %>
</div>