<%= form_with url: search_rooms_path, method: :post, id:"room_search_form", data: { controller: 'debounce' } do |f| %>
    <%= f.search_field :name_search, value: params[:name_search], placeholder: "Search", data: { action: 'input->debounce#search' }, 
    class:"appearance-none border-none bg-custom-grey rounded-full w-full py-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
<% end %>

<div id="search_results" class="search-results">
    <%= render "rooms/search_results", rooms: @rooms  %>
</div>