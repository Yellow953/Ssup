<%= form_with(model: @room, remote: true, data: {controller: "reset-form", action: "turbo:submit-end->reset-form#reset"}, class:"flex my-4") do |f| %>
    <%= f.text_field :name, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    <%= f.submit "Create", class:"mx-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"  %>
<% end %>